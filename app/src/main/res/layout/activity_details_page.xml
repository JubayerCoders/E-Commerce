<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Details_Page"
    android:background="@color/white">





    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#0D000000"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/net_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#090909"
                android:text="$64.15"
                android:textSize="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_15sdp"

                />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Add to cart"
                android:textSize="@dimen/_13ssp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_15sdp"
                android:backgroundTint="#000000"
                android:textColor="@color/white"
                />

        </RelativeLayout>



    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >


                    <com.denzcoskun.imageslider.ImageSlider

                        android:id="@+id/image_slider"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_160sdp"
                        app:iss_auto_cycle="true"
                        app:iss_period="1000"
                        app:iss_placeholder="@drawable/ic_launcher_foreground"
                        app:iss_error_image="@drawable/ic_launcher_background"
                        app:iss_delay="0"

                        />

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="9dp"
                        android:src="@drawable/fav_icon"
                        android:scaleType="centerCrop"
                        />


                </RelativeLayout>








            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/dt_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16ssp"
                        android:text="I Phone 9"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/rating_bg"
                        >

                        <ImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:src="@drawable/rating_icon"
                            />


                        <TextView
                            android:id="@+id/dt_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.98"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:textColor="#000000"
                            />




                    </LinearLayout>




                </RelativeLayout>

                <TextView
                    android:id="@+id/dt_brand_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apple"
                    android:textColor="#B4000000"
                    />



                <TextView
                    android:id="@+id/dt_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    android:text="An apple mobile which is nothing like apple."
                    android:layout_marginTop="@dimen/_5sdp"
                    />







                <TextView
                    android:id="@+id/dt_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F60404"
                    android:text="94 Available"
                    />

                <TextView
                    android:id="@+id/dt_main_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textColor="#FF5722"
                    android:text="$6415"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_15sdp"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/dt_old_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$6496"
                        android:textSize="@dimen/_12sdp"
                        />

                    <TextView
                        android:id="@+id/off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12.96% off"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="#FA1302"
                        android:textStyle="normal"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"


                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quality"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_8sdp"
                        >

                        <ImageView
                            android:id="@+id/btn_minus"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/minus"
                            android:layout_gravity="center"
                            android:padding="@dimen/_10sdp"
                            android:scaleType="centerCrop"
                            android:background="#fbfbfa"
                            />


                        <TextView
                            android:id="@+id/tv_counter"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:gravity="center"
                            android:textSize="@dimen/_13sdp"
                            android:textColor="@color/black"

                            />


                        <ImageView
                            android:id="@+id/btn_plus"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/plus"
                            android:background="@color/normal_black"
                            android:padding="@dimen/_10sdp"
                            android:scaleType="centerCrop"

                            />





                    </LinearLayout>






                </LinearLayout>










            </LinearLayout>














        </LinearLayout>


    </ScrollView>



</RelativeLayout>